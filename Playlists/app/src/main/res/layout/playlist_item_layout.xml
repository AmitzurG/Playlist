<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="@dimen/playlistItemHeight"
        app:cardCornerRadius="6dp" app:cardElevation="6dp" app:cardUseCompatPadding="true">.

        <FrameLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@drawable/playlist_item_background">

            <TextView
                android:id="@+id/playlistNameTextView"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" android:layout_marginStart="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</layout>

